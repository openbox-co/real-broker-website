---
import ContentMotion from "@/components/react/ContentMotion";
import ItemDetails from "../ItemDetails.astro";
---

<ContentMotion client:visible sx='mt-20 md:mt-[80px] mb-[60px]'>
  <section class="max-w-[1600px] mx-auto px-[30px] md:px-[50px] transition-all ease-in-out">
    <article class="flex justify-end items-end w-full">
      <h2 class="font-primary text-[36px] font-bold max-w-xs md:max-w-full leading-[44px] text-right">
        <span class="text-blueBroker">Comodidades</span> de la zona
      </h2>
    </article>
    <article class="grid grid-cols-2 md:grid-cols-3 w-full max-w-5xl mx-auto gap-10 mt-[60px]">
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="A 5 minutos del municipio de Miches" 
        sx="!items-start"
      />
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="Posibilidades de inversión que ofrecen una rentabilidad elevada" 
        sx="!items-start"
      />
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="La ubicación óptima en el centro del Mar Caribe"
        sx="!items-start"
      />
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="Un entorno que favorece la inversión por parte de extranjeros"
        sx="!items-start"
      />
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="Aeropuerto accesible con vuelos a todo el mundo, a solo 1 hora y 45 minutos de distancia" 
        sx="!items-start"
      />
      <ItemDetails 
        icon="../assets/Group.svg" 
        content="Un sector turístico en constante expansión" 
        sx="!items-start"
      />
    </article>
  </section>
</ContentMotion>