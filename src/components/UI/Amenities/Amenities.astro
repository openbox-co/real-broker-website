---
import Slider from "@/components/react/Slider";
import ContentMotion from "@/components/react/ContentMotion";
import { getLangFromUrl, useTranslations } from "@/utils/i18n";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<ContentMotion client:visible sx='mt-20 md:mt-[80px] mb-[80px]'>
  <section class="max-w-[1600px] mx-auto px-[30px] md:px-[50px] transition-all ease-in-out">
    <article class="flex flex-col gap-y-5">
      {lang === 'en' &&
        <h2 class="font-primary text-[36px] font-bold max-w-xs md:max-w-full leading-[44px] ">
          <span class="text-blueBroker">{t('exclusives_blue')}</span> {t('exclusives_black')}
        </h2>
      }
      {lang === 'es' &&
        <h2 class="font-primary text-[36px] font-bold max-w-xs md:max-w-full leading-[44px] ">
          {t('exclusives_black')} <span class="text-blueBroker">{t('exclusives_blue')}</span>
        </h2>
      }
      <h3 class="max-w-2xl leading-7">
       {t('exclusives_description')} <span class="font-bold">{t('exclusives_description_bold')}</span>
      </h3>
    </article>
    <Slider url={Astro.url} client:visible />
  </section>
</ContentMotion>