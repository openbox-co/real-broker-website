---
import Button from "../Buttons/Button.astro";
import { EnvelopeIcon, PhoneArrowDownLeftIcon } from '@heroicons/react/24/solid'
import RealBroker from "@/assets/RealBroker.png"
import Certificate from "@/assets/svg/Certificate.svg"
import ContactButton from "../Buttons/ContactButton.astro";
const { t } = Astro.props;
---
<section>
  <article class="flex flex-col justify-center items-center lg:justify-start lg:items-start">
    <img src={RealBroker.src} alt="RealBroker" title="RealBroker" class="w-[230px] h-[70px]" loading="eager" />
    <section class="flex flex-col justify-center items-center md:flex-row gap-[6px] my-10">
    <ContactButton content="8094435218" sx='w-fit' href='tel:+8094435218'>
        <Fragment slot="icon">
          <PhoneArrowDownLeftIcon strokeWidth='3' className="w-[18px] h-[18px] text-white" />
        </Fragment>
      </ContactButton>
      <ContactButton content="8292433673" sx='w-fit' href='tel:+8292433673'>
        <Fragment slot="icon">
          <PhoneArrowDownLeftIcon strokeWidth='3' className="w-[18px] h-[18px] text-white" />
        </Fragment>
      </ContactButton>
      <ContactButton content="ventas@realbrokerrd.com" sx='w-fit' href='mailto:ventas@realbrokerrd.com'>
        <Fragment slot="icon">
          <EnvelopeIcon strokeWidth='3' className="w-[18px] h-[18px] text-white" />
        </Fragment>
      </ContactButton>
    </section> 
  </article>
  <article class="grid grid-cols-1 lg:grid-cols-2 gap-y-10 gap-x-5">
    <section class="flex justify-center items-center lg:justify-start lg:items-start flex-col font-primary text-white">
      <h2 class="text-center lg:text-start max-w-2xl lg:max-w-md font-light leading-7">
        {t('footer_title')} <span class="font-semibold">{t('footer_title_bold')}</span>
      </h2>
      <div class="flex gap-x-5">
        <Button sx='w-fit mt-5'>
          <Fragment slot="content">
            <a href="/" aria-label="Let's talk" target="_blank">
              <p class="hover:text-opacity-85">{t('footer_button')}</p>
           </a>
          </Fragment>
        </Button>
        <Button sx='w-fit mt-5'>
          <Fragment slot="content">
            <a href="/" aria-label="Write to us" target="_blank">
              <p class="hover:text-opacity-85">{t('footer_button2')}</p>
           </a>
          </Fragment>
        </Button>
      </div>
    </section>
    <section class="flex flex-col justify-center items-center lg:items-start lg:flex-row gap-10">
      <div class="flex flex-col gap-y-1 font-primary text-white text-[16px] font-light text-center lg:text-start">
        <h3 class="font-medium mb-3">
          {t('footer_our_office')}
        </h3>
        <p class="max-w-xs">
          C. Georgilio Mella Chavier 10, local 201, edificio La goma, sector los prados, Santo Domingo 10132 D.N.
        </p>
      </div>
      <div class="flex flex-col gap-y-1 font-primary text-white text-[16px] font-light text-center md:text-start">
        <h3 class="font-medium mb-3">
          {t('footer_certified')}
        </h3>
        <section class="flex flex-col gap-y-1 items-center lg:items-start">
          <img src={Certificate.src} alt="Certificate" title="Certificate" class="w-[108px] h-[108px]" />
        </section>
      </div>
    </section>
  </article> 
</section>
